{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2021", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "bin/**/*", "src/types"]
}
